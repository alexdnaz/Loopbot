# Rename this file to .env and update the values below
DISCORD_BOT_TOKEN=
OPENAI_API_KEY=

# Scheduling options
RUN_SCHEDULE=true
DAILY_HOUR=4
DAILY_MINUTE=0
LEADERBOARD_HOUR=4
LEADERBOARD_MINUTE=5
VOTE_SUMMARY_HOUR=0
VOTE_SUMMARY_MINUTE=0
CRYPTO_INTERVAL_HOURS=1

# Persistence options
DATA_DIR=./LoopBot/data
DB_PATH=./LoopBot/data/rankings.db

# XP & leveling role IDs (optional)
XP_ROLE_L3=
XP_ROLE_L5=
XP_ROLE_L10=
# Voting lock-out period in hours since submission (default: 24)
VOTE_WINDOW_HOURS=24
# Comma-separated list of coin IDs for live tickers (Coingecko)
CRYPTO_TICKERS=bitcoin,ethereum,ripple,solana
CRYPTO_LIVE_INTERVAL=5
# Maximum number of memes to fetch per !memes or fallback to Reddit
SCRAPE_LIMIT=5
